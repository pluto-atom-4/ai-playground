[flake8]
max-line-length = 100
extend-ignore = E203, W503, E501
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    build,
    dist,
    .eggs,
    *.egg-info,
    infrastructure,
    notebooks,
    .mypy_cache,
    .pytest_cache,
    .tox

# E203: whitespace before ':' (conflicts with black)
# W503: line break before binary operator (conflicts with black)
# E501: line too long (handled by black)

per-file-ignores =
    __init__.py: F401
    tests/*: D100,D101,D102,D103,D104

