# Azure Subscription Configuration
AZURE_SUBSCRIPTION_ID=your-subscription-id-here
AZURE_TENANT_ID=your-tenant-id-here
AZURE_CLIENT_ID=your-client-id-here
AZURE_CLIENT_SECRET=your-client-secret-here

# Azure Resources
AZURE_RESOURCE_GROUP=rg-fraud-detection-dev
AZURE_LOCATION=eastus
AZURE_ML_WORKSPACE_NAME=mlw-fraud-detection-dev
AZURE_STORAGE_ACCOUNT_NAME=stfrauddetectiondev
AZURE_KEY_VAULT_NAME=kv-fraud-detection-dev
AZURE_COSMOSDB_ACCOUNT_NAME=cosmos-fraud-detection-dev

# Application Configuration
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=false

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Model Configuration
MODEL_NAME=fraud_detection_model
MODEL_VERSION=latest
PREDICTION_THRESHOLD=0.5

# Feature Store
FEATURE_STORE_ENABLED=true

# Monitoring
APPINSIGHTS_INSTRUMENTATION_KEY=your-app-insights-key-here
ENABLE_MONITORING=true

# Database
COSMOS_DB_DATABASE=FraudDetection
COSMOS_DB_CONTAINER=Transactions

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1

# Development Tools
PYTEST_TIMEOUT=300
COVERAGE_MIN=80

